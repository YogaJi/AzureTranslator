<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AzureTranslator.Views.TranslatorPage">
    <StackLayout Margin="20" VerticalOptions="StartAndExpand">
        <Label Text="Name" />
        <Entry Text="{Binding TransStringProperty}" Placeholder="Enter text name here" />
        <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
            <Button Text ="Speak" Clicked="OnRecognizeSpeechButtonClicked" />
            <Button Text ="Translate" Clicked="OnTranslateButtonClicked" />
        </StackLayout>
        <Label Text="Translated:" />
        <Label Text="{Binding MyStringProperty}" />

    </StackLayout>
</ContentPage>
